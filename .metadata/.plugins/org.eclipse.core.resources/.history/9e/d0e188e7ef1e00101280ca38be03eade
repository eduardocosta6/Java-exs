package ficha10;

public class Ex4C {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		 int tamanho = 9;
		 for(int l = 1; l <= tamanho; l++) {
			 for ( int c = 1; c <= l; c++) {
					 System.out.print( c + " " );
			 }
			 System.out.println();
		 }
		 
		 for(int l = tamanho - 1; l >= 1 ; l--) {
			 for ( int c = 1; c <= l; c++) {
					 System.out.print(c + " ");
			 }
			 System.out.println();
		 }

	}

}

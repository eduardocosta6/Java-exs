package ficha12;

import javax.swing.JOptionPane;

public class Ex1 {
	
	public static void voltagem () {
	int r = Integer.parseInt(JOptionPane.showInputDialog("Inserir resistencia"));
	int i = Integer.parseInt(JOptionPane.showInputDialog("Inserir intensidade"));
	
	int v = i * r;
	
	System.out.println(v);
	}
	
	public static void intensidade() {
		double v = Double.parseDouble(JOptionPane.showInputDialog("Inserir voltagem"));
		double r = Double.parseDouble(JOptionPane.showInputDialog("Inserir resistencia"));
		
		double i = v / r;
		System.out.println(i);
	}
	
	
	public static void resistencia() {
		double v = Double.parseDouble(JOptionPane.showInputDialog("Inserir voltagem"));
		double i = Double.parseDouble(JOptionPane.showInputDialog("Inserir intensidade"));
		double r = v / i;
		System.out.println(r);
	}
	
	

	
	
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n1 = Integer.parseInt(JOptionPane.showInputDialog(" 1-resistencia / 2-intensidade / 3-voltagem / 0-Sair"));
		
		 switch(n1) {
		 case 1 : {
			 System.out.print("A resistencia é ");
			 resistencia();
			 n1 = Integer.parseInt(JOptionPane.showInputDialog(" 1-resistencia / 2-intensidade / 3-voltagem / 0-Sair"));
		 } case 2 : {
			 System.out.print("A intensidade é ");
			 intensidade();
			 n1 = Integer.parseInt(JOptionPane.showInputDialog(" 1-resistencia / 2-intensidade / 3-voltagem / 0-Sair"));
		 } case 3 : {
			 System.out.print("A voltagem é ");
			voltagem();
			n1 = Integer.parseInt(JOptionPane.showInputDialog(" 1-resistencia / 2-intensidade / 3-voltagem / 0-Sair"));
		 } 
		 case 0 : {
			 System.out.print("o programa fechou");
			break;
		 }default : {
			 System.out.println("===ERROR===");
			 break;
		 }
		 }

	}
	
	
	

}

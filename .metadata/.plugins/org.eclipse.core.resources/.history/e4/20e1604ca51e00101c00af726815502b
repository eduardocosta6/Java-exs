package ficha10;

public class Ex4A {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		 int tamanho = 5;
		 int alt = 16;
		 for(int l = 1; l <= tamanho; l++) {
			 for ( int c = 1; c <= l; c++) {
					 System.out.print(c	 +  " " );
			 }
					
			 for ( int c = 1; c <= alt; c++) {
				 System.out.print(" " );
				 
		 } for ( int c = 1; c <= l; c++) {
			 System.out.print(c	 +  " " );
	 }
			 
			 System.out.println(); 
			 alt -= 4;
		 }


	}

		 }




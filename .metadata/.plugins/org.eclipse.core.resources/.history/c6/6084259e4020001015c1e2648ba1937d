		 switch(n1) {
		 case 1 : {
			 resistencia();
			 break;
		 } case 2 : {
			 intensidade();
			 break;
		 } case 3 : {
			 voltagem();
			 break;
		 }
		 case 0 : {
			 System.out.println("o programa fechou");
			 break;
		 }default : {
			 System.out.println("===ERROR===");
		 }
		 }
		 } while ( n1 !=0);
	
		
	

}
